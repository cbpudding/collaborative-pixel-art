generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./pixelart.db"
}

model Pixel {
  id        Int      @id @default(autoincrement())
  color     String
  placed_at DateTime @default(now())
  user      User     @relation(fields: [user_id], references: [id])
  user_id   String
  x         Int
  y         Int
}

model User {
  access_token     String
  avatar           String?
  discriminator    String
  id               String   @id @unique
  last_placed      DateTime
  placed_pixels    Pixel[]
  refresh_token    String
  token_expiration DateTime
  token_type       String
  username         String
}
