generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./pixelart.db"
}

model Pixel {
  id       Int      @id @default(autoincrement())
  color    Int
  placedAt DateTime @default(now())
  user     User     @relation(fields: [userId], references: [id])
  userId   Int
  x        Int
  y        Int
}

model User {
  access_token     String
  id               Int      @id @unique
  lastPlaced       DateTime
  placedPixels     Pixel[]
  refresh_token    String
  token_expiration DateTime
  token_type       String
}
